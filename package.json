{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "bundle-dev": "webpack  --mode development --devtool eval-source-map --config buildScripts/webpack.config.js ",
    "bundle-prod": "webpack  --mode production --devtool source-map --config buildScripts/webpack.config.js ",
    "start-message": "babel-node buildScripts/startMessage.js",
    "start-server": "babel-node buildScripts/server.js",
    "start": "npm-run-all bundle-dev start-message",
    "poststart": "npm-run-all --parallel start-server lint:watch start-mockapi",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel start localtunnel",
    "lint": "esw buildScripts/webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress tests/setup.js \"tests/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "##prebuild": "npm-run-all lint",
    "build": "npm-run-all bundle-prod",
    "deploy": "surge ./dist"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "whatwg-fetch": "3.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.17.4",
    "@babel/node": "^7.13.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "babel-loader": "^8.2.3",
    "chai": "^4.3.6",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "css-loader": "^6.6.0",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-watch": "^8.0.0",
    "express": "^4.17.3",
    "faker": "^5.5.3",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^19.0.0",
    "json-schema-faker": "^0.5.0-rcv.41",
    "json-server": "^0.17.0",
    "localtunnel": "^2.0.2",
    "mini-css-extract-plugin": "^2.5.3",
    "mocha": "^9.2.0",
    "npm-run-all": "4.1.5",
    "numeral": "2.0.6",
    "open": "^8.4.0",
    "rimraf": "3.0.2",
    "style-loader": "^3.3.1",
    "surge": "^0.23.1",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1"
  }
}
